{
  "manifest_version": 3,
  "name": "YouTube Timestamped Glossary (Smart Brain)",
  "version": "1.0.0",
  "description": "Transform your YouTube learning with AI-powered glossaries. Extract sophisticated terms with timestamps and definitions using our Smart Brain AI.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.apify.com/*",
    "https://www.youtube.com/*",
    "https://*.youtube.com/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Glossify â€” AI-Powered Learning Assistant"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/sidebar.html", 
        "src/sidebar.css",
        "src/utils.js"
      ],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  }
}
